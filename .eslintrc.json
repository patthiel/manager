{
    "extends": "airbnb-base",
    "plugins": ["webdriverio", "jasmine"],
	 "env": {
	  	"es6": true,
	    "webdriverio/wdio": true,
	    "jasmine": true
	  },
	  "rules": {
	  	"indent": ["warn", 4],
	  	"semi": ["warn", "always"],
	  	"import/prefer-default-export": ["warn"],
	  	"space-before-function-paren": ["error", "never"],
	  	"prefer-arrow-callback": "off",
	  	"one-var": "off"
	  }
}